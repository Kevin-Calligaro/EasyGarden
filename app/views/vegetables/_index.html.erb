<div class="col cards-vegetables">
  <% @vegetables.each do |vegetable| %>
    <div class="card-vegetable">
      <div class="vege-photo">
        <%= image_tag("courgette-photo.png", class: "card-vege-photo") %>
        <%= image_tag("courgettes.png", class: "card-vege-icon") %>
      </div>
        <h2><%= vegetable.specie.capitalize%></h2>
      <div class="d-flex justify-content-between">
        <% if vegetable.seeding_start? %>
          <p><em>Seeding</em> <br> From <%= vegetable.seeding_start.strftime("%b")%> to <%=vegetable.seeding_end.strftime("%b") %></p>
        <% else %>
          <p><em>Planting</em> <br> From <%= vegetable.planting_start.strftime("%b")%> to <%=vegetable.planting_end.strftime("%b") %></p>
        <% end %>
        <div class="d-flex align-items-center">
          <button class="button-see select" vegetable_id="<%= vegetable.id %>">See More</button>
        </div>
      </div>
    </div>
  <% end %>
</div>



