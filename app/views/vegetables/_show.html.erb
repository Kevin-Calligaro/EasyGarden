<%  @vegetables.each do |vegetable|%>
  <div class="description-show display-none" vegetable_id=<%= vegetable.id %>>
    <i class="fas fa-minus-circle p-2"></i>
    <div class="title-description">
      <h1><%= vegetable.specie.capitalize %> </h1>
    </div>
    <div class="d-flex">
      <p class="general-description">
        <%= vegetable.description %>      </p>
      <div class="vege-photo-description">
          <%= image_tag vegetable.photo_vegetable, class: "photo-description" %>
      </div>
    </div>
    <div class="onglet-description">
      <nav>
        <div class="nav nav-tabs list-inline tabs-underlined" id="nav-tab-<%=vegetable.id%>" role="tablist">
          <% if vegetable.seeding_start?%>
            <a class="nav-item nav-link tab-underlined active" id="nav-home-tab-<%=vegetable.id%>" data-toggle="tab" href="#nav-home-<%=vegetable.id%>" role="tab" aria-controls="nav-home" aria-selected="true"><%= image_tag("icon-seeding.png", class: "icon-action-description") %> Seeding</a>
          <% end %>
          <% if vegetable.planting_start?%>
            <a class="nav-item nav-link tab-underlined" id="nav-profile-tab-<%=vegetable.id%>" data-toggle="tab" href="#nav-profile-<%=vegetable.id%>" role="tab" aria-controls="nav-profile" aria-selected="false"><%= image_tag("icon-planting.png", class: "icon-action-description") %> Planting</a>
         <% end %>
          <a class="nav-item nav-link tab-underlined" id="nav-contact-tab-<%=vegetable.id%>" data-toggle="tab" href="#nav-contact-<%=vegetable.id%>" role="tab" aria-controls="nav-contact" aria-selected="false"><%= image_tag("icon-harvesting.png", class: "icon-action-description") %> Harvesting</a>
        </div>
      </nav>
      <div class="tab-content" id="nav-tabContent">
        <% if vegetable.seeding_start?%>
          <div class="tab-pane fade show active" id="nav-home-<%=vegetable.id%>" role="tabpanel" aria-labelledby="nav-home-tab">
            <h1>Seeding</h1>
            <h5><em>From <%= vegetable.seeding_start.strftime("%B")%> to <%=vegetable.seeding_end.strftime("%B") %></em></h3>
            <p>
              <%= vegetable.sedding_desription%>
            </p>
          </div>
        <% end %>
        <% if vegetable.planting_start?%>
          <div class="tab-pane fade" id="nav-profile-<%=vegetable.id%>" role="tabpanel" aria-labelledby="nav-profile-tab">
            <h1>Planting</h1>
            <h5><em>From <%= vegetable.planting_start.strftime("%B")%> to <%= vegetable.planting_end.strftime("%B") %></em></h3>
            <p>
              <%= vegetable.planting_description%>
            </p>
          </div>
        <% end %>
        <div class="tab-pane fade" id="nav-contact-<%=vegetable.id%>" role="tabpanel" aria-labelledby="nav-contact-tab">
           <h1>Harvesting</h1>
          <h5><em>From <%= vegetable.harvesting_start.strftime("%B")%> to <%= vegetable.harvesting_end.strftime("%B") %></em></h3>
          <p>
            <%= vegetable.harvesting_description%>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
