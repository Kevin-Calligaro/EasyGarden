<% @tasks_not_done.each do |task| %>
  <div class="action-task">
    <%= task.urgency %>
    <div class="action-color">
      <div class="action-logo">
        <p>⛏️</p>
      </div>
    </div>
    <div class="Action-title d-flex justify-content-evenly">
      <div class="specie-type">
        <h2><%= task.action %> <strong><%= task.garden_vegetable.vegetable.specie %></strong></h2>
      </div>
    </div>
    <div class="see-more">
      <p><i class="fas fa-plus-circle"></i></p>
    </div>
  </div>
<% end %>
