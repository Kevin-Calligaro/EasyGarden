<div class="home-page">
  <div class="home-bar">
    <div class="logo">
      <%= image_tag "Logo-Easy-Garden.png", style: "width:110px;height:60px;" %>
    </div>
    <%= link_to "My garden", garden_path(Garden.all.first.id), class: "btn-my-garden" %>
  </div>

  <div class="slogan">
    <h1>Draw it & Grow it</h1>
  </div>

  <div class="step-container">

    <div class="step-content">
      <div class="step-number">
        <h2>Step 1</h2>
      </div>
      <div class="step-infos">
        <div class="step-instruction">
          <h6>Pick the vegetables you want to grow</h6>
        </div>
        <div class="step-show"></div>
      </div>
    </div>

    <div class="step-content">
      <div class="step-number">
        <h2>Step 2</h2>
      </div>
      <div class="step-infos">
        <div class="step-instruction">
          <h6>Drag your choice into your garden </h6>
        </div>
        <div class="step-show"></div>
      </div>
    </div>

    <div class="step-content">
      <div class="step-number">
        <h2>Step 3</h2>
      </div>
      <div class="step-infos">
        <div class="step-instruction">
          <h6>Now, just follow our lead</h6>
        </div>
        <div class="step-show"></div>
      </div>
    </div>
  </div>
  <div class="btn-create-garden">
    <%= link_to "Create my garden", new_user_registration_path  %>
  </div>
</div>


